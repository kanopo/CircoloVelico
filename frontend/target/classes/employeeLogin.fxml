<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="root" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="me.ollari.circolovelicogui.controllers.loginHandlers.EmployeeLogin">
    <children>
        <Label fx:id="backendisOffline" opacity="0" prefHeight="25.0" prefWidth="200.0" text="Backend is offline"
               textFill="RED"/>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label prefHeight="25.0" prefWidth="200.0" text="Employee username">
                    <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="employee_username" onMouseClicked="#clear_camps" prefHeight="25.0" prefWidth="200.0">
                    <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label prefHeight="25.0" prefWidth="200.0" text="Employee password">
                    <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                    </HBox.margin>
                </Label>
                <PasswordField fx:id="employee_password" onMouseClicked="#clear_camps" prefHeight="25.0"
                               prefWidth="200.0">
                    <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                    </HBox.margin>
                </PasswordField>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button minHeight="40.0" minWidth="150.0" mnemonicParsing="false" onAction="#employee_login"
                        text="Login">
                    <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                    </HBox.margin>
                </Button>
                <Button minHeight="40.0" minWidth="150.0" mnemonicParsing="false" onAction="#go_back" text="Go back">
                    <HBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
